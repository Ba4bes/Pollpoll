@page "/p/{code}/results"
@model PollPoll.Pages.ResultsModel
@{
    ViewData["Title"] = "Live Results";
    var isSingleChoice = Model.Results!.ChoiceMode == PollPoll.Models.ChoiceMode.Single;
}

<link rel="stylesheet" href="~/css/results.css" asp-append-version="true" />

<div class="results-container">
    <div class="poll-header">
        <h1 id="poll-question">@Model.Results!.Question</h1>
        <div class="poll-status" role="status" aria-live="polite">
            @if (Model.Results.IsClosed)
            {
                <span class="badge bg-danger">CLOSED</span>
                @if (Model.Results.ClosedAt.HasValue)
                {
                    <small class="text-muted ms-2">
                        Closed @Model.Results.ClosedAt.Value.ToString("yyyy-MM-dd HH:mm") UTC
                    </small>
                }
            }
            else
            {
                <span class="badge bg-success">OPEN</span>
            }
        </div>
    </div>

    <div class="total-votes" role="status" aria-live="polite" aria-label="Total votes cast">
        <strong>Total Votes:</strong> <span id="total-votes">@Model.Results.TotalVotes</span>
    </div>

    <div id="loading-spinner" class="spinner-border text-primary" role="status" aria-live="polite" style="display: none;">
        <span class="visually-hidden">Loading results...</span>
    </div>

    @if (isSingleChoice)
    {
        <div id="chart-container" class="chart-container" role="img" aria-label="Pie chart showing vote distribution">
            <canvas id="results-chart" aria-label="Interactive pie chart of poll results"></canvas>
        </div>
    }

    <div id="results-table" class="results-table" role="region" aria-labelledby="poll-question">
        <table class="table table-striped table-hover" aria-label="Poll results showing votes and percentages for each option">
            <caption class="visually-hidden">Live poll results for @Model.Results.Question</caption>
            <thead>
                <tr>
                    <th scope="col">Option</th>
                    <th scope="col">Votes</th>
                    <th scope="col">Percentage</th>
                </tr>
            </thead>
            <tbody id="results-body">
                @foreach (var option in Model.Results.Options)
                {
                    <tr data-option-id="@option.OptionId">
                        <td class="option-text">@option.Text</td>
                        <td class="vote-count">@option.VoteCount</td>
                        <td class="percentage">
                            @if (isSingleChoice)
                            {
                                <strong>@(option.Percentage.ToString("F1"))%</strong>
                            }
                            else
                            {
                                <div class="progress">
                                    <div class="progress-bar" role="progressbar" 
                                         style="width: @(option.Percentage)%" 
                                         aria-valuenow="@(option.Percentage)" 
                                         aria-valuemin="0" 
                                         aria-valuemax="100">
                                        @(option.Percentage.ToString("F1"))%
                                    </div>
                                </div>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div id="connection-status" class="connection-status">
        <span id="status-indicator" class="status-indicator"></span>
        <span id="status-text">Connecting...</span>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
    <script>
        (function() {
            const pollCode = '@Model.PollCode';
            const isSingleChoice = @(isSingleChoice ? "true" : "false");
            const apiUrl = `/api/results/${pollCode}`;
            const hubUrl = '/hubs/results';
            
            let connection = null;
            let fallbackInterval = null;
            let isConnected = false;
            let resultsChart = null;

            // High-contrast Quiet Light chart colors
            const chartColors = [
                '#0066CC', // Deep blue
                '#008000', // Forest green
                '#6A1B9A', // Deep purple
                '#E65100', // Burnt orange
                '#00796B', // Teal
                '#C2185B'  // Magenta
            ];

            // Show loading spinner for initial load if > 500ms
            const loadingTimeout = setTimeout(() => {
                document.getElementById('loading-spinner').style.display = 'block';
            }, 500);

            // Update connection status UI
            function updateConnectionStatus(status, text) {
                const indicator = document.getElementById('status-indicator');
                const statusText = document.getElementById('status-text');
                
                indicator.className = `status-indicator status-${status}`;
                statusText.textContent = text;
            }

            // Fetch and update results from API
            async function fetchResults() {
                try {
                    const response = await fetch(apiUrl);
                    if (!response.ok) {
                        console.error('Failed to fetch results:', response.statusText);
                        return;
                    }
                    
                    const data = await response.json();
                    
                    // Initialize chart on first fetch
                    if (isSingleChoice && !resultsChart) {
                        initializeChart(data);
                    }
                    
                    updateResultsUI(data);
                } catch (error) {
                    console.error('Error fetching results:', error);
                }
            }

            // Update the results table with fresh data
            function updateResultsUI(data) {
                clearTimeout(loadingTimeout);
                document.getElementById('loading-spinner').style.display = 'none';
                document.getElementById('total-votes').textContent = data.totalVotes;

                const tbody = document.getElementById('results-body');
                
                data.options.forEach(option => {
                    const row = tbody.querySelector(`tr[data-option-id="${option.optionId}"]`);
                    if (row) {
                        row.querySelector('.vote-count').textContent = option.voteCount;
                        
                        if (isSingleChoice) {
                            // Update bold percentage text for single-choice
                            row.querySelector('.percentage strong').textContent = `${option.percentage.toFixed(1)}%`;
                        } else {
                            // Update progress bar for multi-choice
                            const progressBar = row.querySelector('.progress-bar');
                            progressBar.style.width = `${option.percentage}%`;
                            progressBar.setAttribute('aria-valuenow', option.percentage);
                            progressBar.textContent = `${option.percentage.toFixed(1)}%`;
                        }
                    }
                });

                // Update chart for single-choice polls
                if (isSingleChoice && resultsChart) {
                    resultsChart.data.datasets[0].data = data.options.map(o => o.voteCount);
                    resultsChart.update();
                }
            }

            // Initialize pie chart for single-choice polls
            function initializeChart(data) {
                if (!isSingleChoice) return;

                const ctx = document.getElementById('results-chart');
                if (!ctx) return;

                resultsChart = new Chart(ctx, {
                    type: 'pie',
                    data: {
                        labels: data.options.map(o => o.text),
                        datasets: [{
                            data: data.options.map(o => o.voteCount),
                            backgroundColor: chartColors,
                            borderColor: '#FFFFFF',
                            borderWidth: 2
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: true,
                        plugins: {
                            legend: {
                                display: true,
                                position: 'bottom',
                                labels: {
                                    color: '#1A1A1A',
                                    font: {
                                        size: 14,
                                        weight: 'bold'
                                    },
                                    padding: 15,
                                    usePointStyle: true
                                }
                            },
                            tooltip: {
                                backgroundColor: '#1A1A1A',
                                titleColor: '#FFFFFF',
                                bodyColor: '#FFFFFF',
                                borderColor: '#0066CC',
                                borderWidth: 1,
                                padding: 12,
                                displayColors: true,
                                callbacks: {
                                    label: function(context) {
                                        const label = context.label || '';
                                        const value = context.parsed || 0;
                                        const total = context.dataset.data.reduce((a, b) => a + b, 0);
                                        const percentage = total > 0 ? ((value / total) * 100).toFixed(1) : 0;
                                        return `${label}: ${value} votes (${percentage}%)`;
                                    }
                                }
                            }
                        }
                    }
                });
            }

            // Initialize SignalR connection
            async function initializeSignalR() {
                try {
                    connection = new signalR.HubConnectionBuilder()
                        .withUrl(hubUrl)
                        .withAutomaticReconnect()
                        .build();

                    connection.on('VoteUpdated', async (updatedPollCode) => {
                        if (updatedPollCode === pollCode) {
                            await fetchResults();
                        }
                    });

                    connection.onreconnecting(() => {
                        updateConnectionStatus('warning', 'Reconnecting...');
                    });

                    connection.onreconnected(() => {
                        updateConnectionStatus('connected', 'Connected');
                        isConnected = true;
                        // Rejoin the poll group
                        connection.invoke('JoinPollGroup', pollCode);
                    });

                    connection.onclose(() => {
                        updateConnectionStatus('disconnected', 'Disconnected');
                        isConnected = false;
                        startFallbackPolling();
                    });

                    await connection.start();
                    updateConnectionStatus('connected', 'Connected');
                    isConnected = true;

                    // Join the poll group
                    await connection.invoke('JoinPollGroup', pollCode);
                    
                    // Stop fallback polling if it was running
                    stopFallbackPolling();
                } catch (error) {
                    console.error('SignalR connection failed:', error);
                    updateConnectionStatus('disconnected', 'Disconnected - using fallback');
                    startFallbackPolling();
                }
            }

            // Start fallback polling every 5 seconds
            function startFallbackPolling() {
                if (!fallbackInterval && !isConnected) {
                    console.log('Starting fallback polling every 5 seconds');
                    fallbackInterval = setInterval(fetchResults, 5000);
                }
            }

            // Stop fallback polling
            function stopFallbackPolling() {
                if (fallbackInterval) {
                    console.log('Stopping fallback polling');
                    clearInterval(fallbackInterval);
                    fallbackInterval = null;
                }
            }

            // Initialize on page load
            fetchResults(); // Initial fetch to populate chart
            initializeSignalR();

            // Cleanup on page unload
            window.addEventListener('beforeunload', () => {
                stopFallbackPolling();
                if (connection) {
                    connection.stop();
                }
            });
        })();
    </script>
}
